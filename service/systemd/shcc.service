[Unit]
Description=SHCC daemon
After=network.target nginx.service php-fpm@7.4.service postgresql-12.service
Requires=network.target nginx.service php-fpm@7.4.service postgresql-12.service

[Service]
Type=forking
WorkingDirectory=/var/www/shcc/service
User=www-data
Group=www-data
RuntimeDirectory=shcc
LogsDirectory=shcc
CacheDirectory=shcc
ExecStart=/usr/bin/php -f daemonctl.php start
ExecStop=/usr/bin/php -f daemonctl.php stop
Restart=always

[Install]
WantedBy=multi-user.target